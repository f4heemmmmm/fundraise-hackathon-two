{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"types": ["node"],
		"noUncheckedIndexedAccess": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/__tests__"]
}
